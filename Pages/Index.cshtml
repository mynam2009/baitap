@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Bán Hàng Đơn Giản</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f4;
        }
        .product {
            display: inline-block;
            width: 30%;
            margin: 10px;
            padding: 10px;
            border: 1px solid #ddd;
            background-color: white;
            text-align: center;
        }
        .product img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
        #cart {
            margin-top: 20px;
            padding: 10px;
            border: 1px solid #ddd;
            background-color: white;
        }
        #cart h2 {
            margin-top: 0;
        }
        #cart ul {
            list-style-type: none;
            padding: 0;
        }
        #cart li {
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <h1>Cửa Hàng Bán Hàng</h1>
    
    <div class="products">
        <div class="product">
            <img src="~/img/6.png" alt="Sản phẩm 1">
            <h3>Sản Phẩm 1</h3>
            <p>Giá: 100.000 VND</p>
            <button onclick="addToCart('Sản Phẩm 1', 100000)">Mua</button>
        </div>
        
        <div class="product">
            <img src="~/img/5.png" alt="Sản phẩm 2">
            <h3>Sản Phẩm 2</h3>
            <p>Giá: 200.000 VND</p>
            <button onclick="addToCart('Sản Phẩm 2', 200000)">Mua</button>
        </div>
        
        <div class="product">
            <img src="~/img/4.png" alt="Sản phẩm 3">
            <h3>Sản Phẩm 3</h3>
            <p>Giá: 150.000 VND</p>
            <button onclick="addToCart('Sản Phẩm 3', 150000)">Mua</button>
        </div>
        
        <div class="product">
            <img src="~/img/3.png" alt="Sản phẩm 4">
            <h3>Sản Phẩm 4</h3>
            <p>Giá: 300.000 VND</p>
            <button onclick="addToCart('Sản Phẩm 4', 300000)">Mua</button>
        </div>
        
        <div class="product">
            <img src="~/img/2.png"
             alt="Sản phẩm 5">
            <h3>Sản Phẩm 5</h3>
            <p>Giá: 250.000 VND</p>
            <button onclick="addToCart('Sản Phẩm 5', 250000)">Mua</button>
        </div>
        
        <div class="product">
            <img src="~/img/1.png"
                 alt="Sản phẩm 6">
            <h3>Sản Phẩm 6</h3>
            <p>Giá: 180.000 VND</p>
            <button onclick="addToCart('Sản Phẩm 6', 180000)">Mua</button>
        </div>
    </div>
    
    <div id="cart">
        <h2>Giỏ Hàng</h2>
        <ul id="cart-items"></ul>
        <p>Tổng giá: <span id="total-price">0</span> VND</p>
    </div>

    <script>
        let cart = [];
        let total = 0;

        function addToCart(name, price) {
            cart.push({ name, price });
            total += price;
            updateCart();
        }

        function updateCart() {
            const cartItems = document.getElementById('cart-items');
            cartItems.innerHTML = '';
            cart.forEach(item => {
                const li = document.createElement('li');
                li.textContent = `${item.name} - ${item.price.toLocaleString()} VND`;
                cartItems.appendChild(li);
            });
            document.getElementById('total-price').textContent = total.toLocaleString();
        }
    </script>
</body>
</html>
</div>
